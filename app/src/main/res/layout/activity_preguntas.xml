<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Preguntas"
    android:padding="20dp">

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="10:00" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/txtPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="La ganancia de energía cinética, cuando actúan fuerzas conservativas sobre un cuerpo se traduce en perdida de energía:" />

                <ImageView
                    android:id="@+id/imgPregunta"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kep_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickeo"
                android:orientation="vertical"
                android:tag="A"
                android:padding="5dp"
                android:background="@drawable/mi_borde"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/txtRa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clickeo"
                    android:tag="A"
                    android:text="Térmica"
                    android:textAlignment="center"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/imgRa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kep_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:tag="B"
                android:onClick="clickeo"
                android:padding="5dp"
                android:background="@drawable/mi_borde"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtRb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potencial"
                    android:tag="B"
                    android:onClick="clickeo"
                    android:textAlignment="center"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/imgRb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kep_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:tag="C"
                android:onClick="clickeo"
                android:padding="5dp"
                android:background="@drawable/mi_borde"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtRc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mecánica total"
                    android:tag="C"
                    android:onClick="clickeo"
                    android:textAlignment="center"
                    android:padding="5dp"
                    />

                <ImageView
                    android:id="@+id/imgRc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kep_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:tag="D"
                android:onClick="clickeo"
                android:padding="5dp"
                android:background="@drawable/mi_borde"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtRd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="D"
                    android:onClick="clickeo"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Debido a fuerzas de fricción" />

                <ImageView
                    android:id="@+id/imgRd"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kep_icon" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/siguiente"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/siguiente_icon"
                android:enabled="false"
                android:onClick="clickeoSiguiente"
                android:layout_gravity="right"
                />

            <Button
                android:id="@+id/salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="salir"
                android:text="SALIR" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>